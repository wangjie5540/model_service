        required: true
modelHyperParameter:
  - label: 模型参数
    itemList:
      - type: input
        attributeName: model__max_depth
        prefixText: 最大深度(max_depth)
        pattern: "^1\\d{0,10}$"
        description: 树模型的最大深度
        placeholder: 5
        required: true
      - type: input
        attributeName: model__scale_pos_weight
        prefixText: 正负类别比例(scale_pos_weight)
        pattern: "^1\\d{0,10}$"
        description: 负类别数与正类别数之比，辅助处理类别不平衡的情况，帮助模型更快收敛
        placeholder: 0.5
        errorMessage: 请输入正确的批次大小
        required: true
      - type: input
        attributeName: model__n_estimators
        prefixText: 子模型个数(n_estimators)
        pattern: "^1\\d{0,10}$"
        description: 弱学习器个数
        placeholder: 200
        errorMessage: 请输入正确的学习率
        required: true
      - type: input
        attributeName: model__learning_rate
        prefixText: 学习率(learning_rate)
        pattern: "^1\\d{0,10}$"
        description: 每个迭代产生的模型的权重
        placeholder: 0.05
        errorMessage: 请输入正确的学习率
        required: true
